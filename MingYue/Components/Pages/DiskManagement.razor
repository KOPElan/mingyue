                <div class="empty-state">
                    <div class="empty-state-icon">
                        <FluentIcon Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size48.Cloud())" />
                    </div>
                    <p class="empty-state-text">No network disks configured.</p>
                    <p class="empty-state-text">Click "Add Network Disk" to add one.</p>
                </div>
            }
            else
            {
                @foreach (var disk in networkDisks)
                {
                    <div class="disk-card">
                        <div class="disk-card-header">
                            <div class="disk-info">
                                <div class="disk-icon">
                                    @if (disk.DiskType == NetworkDiskType.NFS)
                                    {
                                        <FluentIcon Value="@(new Icons.Regular.Size24.Database())" />
                                    }
                                    else
                                    {
                                        <FluentIcon Value="@(new Icons.Regular.Size24.FolderOpen())" />
                                    }
                                </div>
                                <div class="disk-details">
                                    <h3 class="disk-name">@disk.FullPath</h3>
                                    <div class="disk-meta">
                                        <FluentBadge Appearance="@(disk.DiskType == NetworkDiskType.NFS ? Appearance.Accent : Appearance.Neutral)">
                                            @disk.DiskType.ToString()
                                        </FluentBadge>
                                        @if (!string.IsNullOrEmpty(disk.MountPoint))
                                        {
                                            <span><FluentIcon Value="@(new Icons.Regular.Size16.FolderOpen())" Style="margin-right: 4px;" />@disk.MountPoint</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="disk-actions">
                                @if (disk.IsReady)
                                {
                                    <FluentBadge Fill="success" BackgroundColor="var(--success-color, green)" Color="white">
                                        <FluentIcon Value="@(new Icons.Regular.Size16.CheckmarkCircle())" Slot="start" />
                                        Mounted
                                    </FluentBadge>
                                }
                                else
                                {
                                    <FluentBadge Appearance="Appearance.Neutral">Not Mounted</FluentBadge>
                                }
                                <FluentButton Appearance="Appearance.Outline" 
                                            OnClick="@(() => ToggleNetworkDiskMount(disk))"
