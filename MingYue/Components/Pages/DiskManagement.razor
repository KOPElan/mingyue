@page "/disk-management"
@using MingYue.Models
@using MingYue.Services
@using MingYue.Resources
@using Microsoft.Extensions.Localization
@using Icons = Microsoft.FluentUI.AspNetCore.Components.Icons
@inject IDiskManagementService DiskService
@inject AuthenticationStateService AuthStateService
@inject NavigationManager Navigation
@inject ILogger<DiskManagement> Logger
@inject IToastService ToastService
@inject IStringLocalizer<SharedResources> Localizer

<PageTitle>@Localizer["DiskManagement"] - MingYue</PageTitle>

@if (!isAuthorized)
{
    <FluentMessageBar Intent="MessageIntent.Error">
        <p>@Localizer["AccessDenied"]</p>
    </FluentMessageBar>
    return;
}

<FluentStack Orientation="Orientation.Vertical" VerticalGap="24">
    <!-- Header -->
    <div class="page-header">
        <FluentIcon Value="@(new Icons.Regular.Size24.HardDrive())" Color="@Color.Accent" />
        <h1 class="page-title">@Localizer["DiskManagement"]</h1>
        <div class="header-actions">
            <FluentButton Appearance="Appearance.Neutral" OnClick="@RefreshDisks">
                <FluentIcon Value="@(new Icons.Regular.Size20.ArrowSync())" Slot="start" />
                @Localizer["Refresh"]
            </FluentButton>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <FluentProgressRing />
        </div>
    }
    else
    {
        <!-- Local Disks Section -->
        <div class="disk-section">
            <div class="section-header">
                <FluentIcon Value="@(new Icons.Regular.Size20.HardDrive())" Color="@Color.Accent" />
                <h2 class="section-title">@Localizer["AllDiskDevices"]</h2>
            </div>

            @if (localDisks.Count == 0)
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <FluentIcon Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size48.HardDrive())" />
                    </div>
                    <p class="empty-text">@Localizer["NoLocalDisks"]</p>
                </div>
            }
            else
            {
                <table class="disk-table">
                    <thead>
                        <tr>
                            <th>设备</th>
                            <th>类型</th>
                            <th>大小</th>
                            <th>文件系统</th>
                            <th>挂载点</th>
                            <th>使用率</th>
                            <th>UUID</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var disk in localDisks)
                        {
                            <!-- Parent Disk Row -->
                            <tr class="disk-row-parent">
                                <td>
                                    <div class="device-cell">
                                        @if (disk.IsRemovable)
                                        {
                                            <FluentIcon Value="@(new Icons.Regular.Size20.UsbStick())" />
                                        }
                                        else
                                        {
                                            <FluentIcon Value="@(new Icons.Regular.Size20.HardDrive())" />
                                        }
                                        <span>@disk.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="type-badge type-@(disk.Type)">@disk.Type</span>
                                </td>
                                <td>@disk.SizeDisplay</td>
                                <td>@(string.IsNullOrEmpty(disk.FileSystem) ? "-" : disk.FileSystem)</td>
                                <td>@(string.IsNullOrEmpty(disk.MountPoint) ? "-" : disk.MountPoint)</td>
                                <td>
                                    @if (disk.IsReady && disk.TotalBytes > 0)
                                    {
                                        <div class="usage-container">
                                            <div class="usage-bar-wrapper">
                                                <div class="usage-bar-fill" style="width: @(disk.UsagePercent)%"></div>
                                            </div>
                                            <span class="usage-text">@disk.UsagePercent.ToString("F1")%</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(disk.UUID))
                                    {
                                        <span title="@disk.UUID">@(disk.UUID.Length > 12 ? disk.UUID.Substring(0, 12) + "..." : disk.UUID)</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        @if (disk.IsReady)
                                        {
                                            <FluentButton Appearance="Appearance.Outline"
                                                          OnClick="@(() => ToggleDiskMount(disk))"
                                                          Disabled="@(string.IsNullOrEmpty(disk.DevicePath))"
                                                          Title="卸载">
                                                卸载
                                            </FluentButton>
                                        }
                                        else
                                        {
                                            <FluentButton Appearance="Appearance.Accent"
                                                          OnClick="@(() => ToggleDiskMount(disk))"
                                                          Disabled="@(string.IsNullOrEmpty(disk.DevicePath))"
                                                          Title="挂载">
                                                挂载
                                            </FluentButton>
                                        }
                                        <FluentButton Appearance="Appearance.Outline"
                                                      IconEnd="@(new Icons.Regular.Size16.Info())"
                                                      OnClick="@(() => OpenSmartInfoDialog(disk))"
                                                      Disabled="@(string.IsNullOrEmpty(disk.DevicePath))"
                                                      Title="SMART 信息">
                                        </FluentButton>
                                        <FluentButton Appearance="Appearance.Outline"
                                                      IconEnd="@(new Icons.Regular.Size16.Battery10())"
                                                      OnClick="@(() => OpenPowerManagementDialog(disk))"
                                                      Disabled="@(string.IsNullOrEmpty(disk.DevicePath))"
                                                      Title="电源管理">
                                        </FluentButton>
                                    </div>
                                </td>
                            </tr>

                            <!-- Child Partition Rows -->
                            @if (disk.Children != null && disk.Children.Any())
                            {
                                @foreach (var partition in disk.Children)
                                {
                                    <tr class="disk-row-child">
                                        <td>
                                            <div class="device-cell">
                                                <FluentIcon Value="@(new Icons.Regular.Size20.BorderNone())" />
                                                <span>@partition.Name</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="type-badge type-@(partition.Type)">@partition.Type</span>
                                        </td>
                                        <td>@partition.SizeDisplay</td>
                                        <td>@(string.IsNullOrEmpty(partition.FileSystem) ? "-" : partition.FileSystem)</td>
                                        <td>@(string.IsNullOrEmpty(partition.MountPoint) ? "-" : partition.MountPoint)</td>
                                        <td>
                                            @if (partition.IsReady && partition.TotalBytes > 0)
                                            {
                                                <div class="usage-container">
                                                    <div class="usage-bar-wrapper">
                                                        <div class="usage-bar-fill" style="width: @(partition.UsagePercent)%"></div>
                                                    </div>
                                                    <span class="usage-text">@partition.UsagePercent.ToString("F1")%</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(partition.UUID))
                                            {
                                                <span title="@partition.UUID">@(partition.UUID.Length > 12 ? partition.UUID.Substring(0, 12) + "..." : partition.UUID)</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                @if (partition.IsReady)
                                                {
                                                    <FluentButton Appearance="Appearance.Outline"
                                                                  OnClick="@(() => ToggleDiskMount(partition))"
                                                                  Disabled="@(string.IsNullOrEmpty(partition.DevicePath))"
                                                                  Title="卸载">
                                                        卸载
                                                    </FluentButton>
                                                }
                                                else
                                                {
                                                    <FluentButton Appearance="Appearance.Accent"
                                                                  OnClick="@(() => ToggleDiskMount(partition))"
                                                                  Disabled="@(string.IsNullOrEmpty(partition.DevicePath))"
                                                                  Title="挂载">
                                                        挂载
                                                    </FluentButton>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            }
        </div>

        <!-- Network Disks Section -->
        <div class="disk-section">
            <div class="section-header">
                <FluentIcon Value="@(new Icons.Regular.Size20.Globe())" Color="@Color.Accent" />
                <h2 class="section-title">网络磁盘</h2>
                <FluentBadge Appearance="Appearance.Neutral">@networkDisks.Count 个</FluentBadge>
                <FluentButton Appearance="Appearance.Accent" OnClick="@OpenNetworkDiskWizard" IconStart="@(new Icons.Regular.Size20.Add())">
                    挂载网络磁盘
                </FluentButton>
            </div>

            @if (networkDisks.Count == 0)
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <FluentIcon Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size48.Globe())" />
                    </div>
                    <p class="empty-text">没有挂载的网络磁盘</p>
                    <p class="empty-text">您可以挂载 SMB, NFS 或 WebDAV 等远程存储设备。</p>
                </div>
            }
            else
            {
                <table class="disk-table">
                    <thead>
                        <tr>
                            <th>设备</th>
                            <th>类型</th>
                            <th>大小</th>
                            <th>文件系统</th>
                            <th>挂载点</th>
                            <th>使用率</th>
                            <th>服务器</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var disk in networkDisks)
                        {
                            <tr class="@(disk.IsReady ? "" : "disk-unmounted-row")">
                                <td>
                                    <div class="device-cell">
                                        @if (disk.DiskType == NetworkDiskType.NFS)
                                        {
                                            <FluentIcon Value="@(new Icons.Regular.Size20.Database())" />
                                        }
                                        else
                                        {
                                            <FluentIcon Value="@(new Icons.Regular.Size20.FolderOpen())" />
                                        }
                                        <span>@disk.FullPath</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="type-badge type-disk">@disk.DiskType.ToString()</span>
                                </td>
                                <td>@(disk.IsReady? disk.SizeDisplay: "-")</td>
                                <td>@(disk.IsReady && !string.IsNullOrEmpty(disk.FileSystem) ? disk.FileSystem : "-")</td>
                                <td>@(string.IsNullOrEmpty(disk.MountPoint) ? "-" : disk.MountPoint)</td>
                                <td>
                                    @if (disk.IsReady && disk.TotalBytes > 0)
                                    {
                                        <div class="usage-container">
                                            <div class="usage-bar-wrapper">
                                                <div class="usage-bar-fill" style="width: @(disk.UsagePercent)%"></div>
                                            </div>
                                            <span class="usage-text">@disk.UsagePercent.ToString("F1")%</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>@(string.IsNullOrEmpty(disk.Server) ? "-" : disk.Server)</td>
                                                                <td>
                                                                    @if (disk.IsReady)
                                                                    {
                                                                        <span class="disk-status-mounted">已挂载</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="disk-status-unmounted">未挂载/挂载失败</span>
                                                                    }
                                                                </td>
                                <td>
                                    <div class="action-buttons">
                                        @if (disk.IsReady)
                                        {
                                            <FluentButton Appearance="Appearance.Outline"
                                                          OnClick="@(() => ToggleNetworkDiskMount(disk))"
                                                          Title="卸载">
                                                卸载
                                            </FluentButton>
                                        }
                                        else
                                        {
                                            <FluentButton Appearance="Appearance.Accent"
                                                          OnClick="@(() => ToggleNetworkDiskMount(disk))"
                                                          Title="挂载">
                                                挂载
                                            </FluentButton>
                                        }
                                        <FluentButton Appearance="Appearance.Outline"
                                                      OnClick="@(() => DeleteNetworkDisk(disk))"
                                                      Title="删除">
                                            删除
                                        </FluentButton>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    }
</FluentStack>

<!-- Network Disk Wizard Dialog -->
<FluentDialog @ref="wizardDialog" @bind-Hidden="@isWizardHidden" TrapFocus="true" Modal="true" Class="dialog-min-width">
    <FluentDialogHeader ShowDismiss="true">
        <FluentStack VerticalAlignment="VerticalAlignment.Center">
            <FluentIcon Value="@(new Icons.Regular.Size24.HardDrive())" />
            <FluentLabel Typo="Typography.PaneHeader">
                添加网络磁盘 - 步骤 @wizardStep / 4
            </FluentLabel>
        </FluentStack>
    </FluentDialogHeader>

    <FluentDialogBody>
        @if (wizardStep == 1)
        {
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
                <FluentLabel Typo="Typography.Body">选择要添加的网络磁盘类型：</FluentLabel>

                <FluentRadioGroup @bind-Value="networkDiskConfig.DiskType" Orientation="Orientation.Vertical">
                    <FluentRadio Value="@NetworkDiskType.CIFS">
                        <FluentStack Orientation="Orientation.Vertical" VerticalGap="5">
                            <FluentLabel Weight="FontWeight.Bold">SMB/CIFS</FluentLabel>
                            <FluentLabel>Windows 文件共享，Samba 服务器</FluentLabel>
                        </FluentStack>
                    </FluentRadio>
                    <FluentRadio Value="@NetworkDiskType.NFS">
                        <FluentStack Orientation="Orientation.Vertical" VerticalGap="5">
                            <FluentLabel Weight="FontWeight.Bold">NFS</FluentLabel>
                            <FluentLabel>Unix/Linux 网络文件系统</FluentLabel>
                        </FluentStack>
                    </FluentRadio>
                </FluentRadioGroup>
            </FluentStack>
        }
        else if (wizardStep == 2)
        {
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
                <FluentLabel Typo="Typography.Body">输入连接详情：</FluentLabel>

                <FluentTextField @bind-Value="networkDiskConfig.Server"
                                 Label="服务器（IP 或主机名）"
                                 Required="true"
                                 Placeholder="@(networkDiskConfig.DiskType == NetworkDiskType.CIFS ? "192.168.1.10 或 server.local" : "192.168.1.10")"
                                 Class="form-field-full-width" />

                <FluentTextField @bind-Value="networkDiskConfig.SharePath"
                                 Label="@(networkDiskConfig.DiskType == NetworkDiskType.CIFS ? "共享名称" : "导出路径")"
                                 Required="true"
                                 Placeholder="@(networkDiskConfig.DiskType == NetworkDiskType.CIFS ? "MyShare" : "/export/data")"
                                 Class="form-field-full-width" />

                @if (networkDiskConfig.DiskType == NetworkDiskType.CIFS)
                {
                    <FluentTextField @bind-Value="networkDiskConfig.Username"
                                     Label="用户名（可选）"
                                     Placeholder="username"
                                     Class="form-field-full-width" />

                    <FluentTextField @bind-Value="networkDiskConfig.Password"
                                     Label="密码（可选）"
                                     TextFieldType="TextFieldType.Password"
                                     Placeholder="password"
                                     Class="form-field-full-width" />

                    <FluentTextField @bind-Value="networkDiskConfig.Domain"
                                     Label="域（可选）"
                                     Placeholder="WORKGROUP"
                                     Class="form-field-full-width" />
                }
            </FluentStack>
        }
        else if (wizardStep == 3)
        {
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
                <FluentLabel Typo="Typography.Body">选择挂载选项：</FluentLabel>

                <FluentTextField @bind-Value="networkDiskConfig.MountPoint"
                                 Label="挂载点"
                                 Required="true"
                                 Placeholder="/mnt/network-share"
                                 Class="form-field-full-width" />

                <FluentCheckbox @bind-Value="networkDiskConfig.ReadOnly"
                                Label="只读" />

                <FluentCheckbox @bind-Value="networkDiskConfig.AutoMount"
                                Label="开机自动挂载（永久）" />
            </FluentStack>
        }
        else if (wizardStep == 4)
        {
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
                <FluentLabel Typo="Typography.Body">确认您的设置：</FluentLabel>

                <FluentStack Orientation="Orientation.Vertical" VerticalGap="10" Class="wizard-summary">
                    <FluentLabel><strong>类型：</strong> @networkDiskConfig.DiskType</FluentLabel>
                    <FluentLabel><strong>服务器：</strong> @networkDiskConfig.Server</FluentLabel>
                    <FluentLabel><strong>@(networkDiskConfig.DiskType == NetworkDiskType.CIFS ? "共享" : "路径")：</strong> @networkDiskConfig.SharePath</FluentLabel>
                    <FluentLabel><strong>挂载点：</strong> @networkDiskConfig.MountPoint</FluentLabel>
                    @if (!string.IsNullOrEmpty(networkDiskConfig.Username))
                    {
                        <FluentLabel><strong>用户名：</strong> @networkDiskConfig.Username</FluentLabel>
                    }
                    <FluentLabel><strong>只读：</strong> @(networkDiskConfig.ReadOnly ? "是" : "否")</FluentLabel>
                    <FluentLabel><strong>自动挂载：</strong> @(networkDiskConfig.AutoMount ? "是" : "否")</FluentLabel>
                </FluentStack>
            </FluentStack>
        }
    </FluentDialogBody>

    <FluentDialogFooter>
        @if (wizardStep > 1)
        {
            <FluentButton Appearance="Appearance.Neutral" OnClick="@PreviousWizardStep">
                上一步
            </FluentButton>
        }
        @if (wizardStep < 4)
        {
            <FluentButton Appearance="Appearance.Accent" OnClick="@NextWizardStep"
                          Disabled="@(!IsCurrentWizardStepValid())">
                下一步
            </FluentButton>
        }
        else
        {
            <FluentButton Appearance="Appearance.Accent" OnClick="@MountNetworkDisk">
                挂载
            </FluentButton>
        }
        <FluentButton Appearance="Appearance.Neutral" OnClick="@CloseWizard">
            取消
        </FluentButton>
    </FluentDialogFooter>
</FluentDialog>

<!-- SMART Information Dialog -->
<FluentDialog @ref="smartDialog" @bind-Hidden="@isSmartDialogHidden" TrapFocus="true" Modal="true" Class="dialog-wide">
    <FluentDialogHeader ShowDismiss="true">
        <FluentStack VerticalAlignment="VerticalAlignment.Center">
            <FluentIcon Value="@(new Icons.Regular.Size24.Info())" />
            <FluentLabel Typo="Typography.PaneHeader">
                SMART 信息 - @selectedDisk?.Name
            </FluentLabel>
        </FluentStack>
    </FluentDialogHeader>

    <FluentDialogBody>
        @if (smartInfo == null)
        {
            <FluentProgressRing />
            <p>正在加载 SMART 信息...</p>
        }
        else if (!smartInfo.Success)
        {
            <FluentMessageBar Intent="MessageIntent.Error">
                @smartInfo.ErrorMessage
            </FluentMessageBar>
        }
        else
        {
            <FluentStack Orientation="Orientation.Vertical" VerticalGap="20">
                <!-- Basic Information -->
                <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
                    <FluentLabel Typo="Typography.Body" Weight="FontWeight.Bold">基本信息</FluentLabel>
                    <FluentStack Orientation="Orientation.Horizontal" VerticalGap="10" Class="smart-info-grid">
                        <div>
                            <FluentLabel Class="smart-field-label">型号</FluentLabel>
                            <FluentLabel>@(string.IsNullOrEmpty(smartInfo.Model) ? "-" : smartInfo.Model)</FluentLabel>
                        </div>
                        <div>
                            <FluentLabel Class="smart-field-label">序列号</FluentLabel>
                            <FluentLabel>@(string.IsNullOrEmpty(smartInfo.SerialNumber) ? "-" : smartInfo.SerialNumber)</FluentLabel>
                        </div>
                        <div>
                            <FluentLabel Class="smart-field-label">固件版本</FluentLabel>
                            <FluentLabel>@(string.IsNullOrEmpty(smartInfo.FirmwareVersion) ? "-" : smartInfo.FirmwareVersion)</FluentLabel>
                        </div>
                        <div>
                            <FluentLabel Class="smart-field-label">容量</FluentLabel>
                            <FluentLabel>@(string.IsNullOrEmpty(smartInfo.Capacity) ? "-" : smartInfo.Capacity)</FluentLabel>
                        </div>
                    </FluentStack>
                </FluentStack>

                <!-- Health Status -->
                <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
                    <FluentLabel Typo="Typography.Body" Weight="FontWeight.Bold">健康状态</FluentLabel>
                    <FluentStack Orientation="Orientation.Horizontal" VerticalGap="10" Class="smart-info-grid">
                        <div>
                            <FluentLabel Class="smart-field-label">整体健康状态</FluentLabel>
                            @if (smartInfo.HealthStatus.Contains("PASSED", StringComparison.OrdinalIgnoreCase) ||
                                                    smartInfo.HealthStatus.Contains("OK", StringComparison.OrdinalIgnoreCase))
                            {
                                <FluentBadge Fill="success" BackgroundColor="var(--success-color, green)" Color="white">@smartInfo.HealthStatus</FluentBadge>
                            }
                            else if (smartInfo.HealthStatus.Contains("FAILED", StringComparison.OrdinalIgnoreCase))
                            {
                                <FluentBadge Fill="danger" BackgroundColor="var(--error-color, red)" Color="white">@smartInfo.HealthStatus</FluentBadge>
                            }
                            else
                            {
                                <FluentLabel>@(string.IsNullOrEmpty(smartInfo.HealthStatus) ? "-" : smartInfo.HealthStatus)</FluentLabel>
                            }
                        </div>
                        <div>
                            <FluentLabel Class="smart-field-label">SMART 支持</FluentLabel>
                            <FluentLabel>@(smartInfo.IsSupported ? "是" : "否") @(smartInfo.IsEnabled ? "(已启用)" : "(未启用)")</FluentLabel>
                        </div>
                        @if (smartInfo.Temperature.HasValue)
                        {
                            <div>
                                <FluentLabel Class="smart-field-label">温度</FluentLabel>
                                <FluentLabel>@smartInfo.Temperature.Value °C</FluentLabel>
                            </div>
                        }
                        @if (smartInfo.PowerOnHours.HasValue)
                        {
                            <div>
                                <FluentLabel Class="smart-field-label">通电时间</FluentLabel>
                                <FluentLabel>@smartInfo.PowerOnHours.Value 小时 (@(smartInfo.PowerOnHours.Value / 24) 天)</FluentLabel>
                            </div>
                        }
                        @if (smartInfo.PowerCycleCount.HasValue)
                        {
                            <div>
                                <FluentLabel Class="smart-field-label">电源循环次数</FluentLabel>
                                <FluentLabel>@smartInfo.PowerCycleCount.Value 次</FluentLabel>
                            </div>
                        }
                    </FluentStack>
                </FluentStack>

                <!-- SMART Attributes -->
                @if (smartInfo.Attributes.Count > 0)
                {
                    <FluentStack Orientation="Orientation.Vertical" VerticalGap="10">
                        <FluentLabel Typo="Typography.Body" Weight="FontWeight.Bold">SMART 属性</FluentLabel>
                        <div class="smart-attributes-container">
                            <FluentDataGrid Items="@smartInfo.Attributes.AsQueryable()" GridTemplateColumns="0.5fr 2fr 0.8fr 0.8fr 0.8fr 1.5fr">
                                <PropertyColumn Property="@(a => a.Id)" Title="ID" Sortable="true" />
                                <PropertyColumn Property="@(a => a.Name)" Title="属性名称" Sortable="true" />
                                <PropertyColumn Property="@(a => a.Value)" Title="当前值" Sortable="true" />
                                <PropertyColumn Property="@(a => a.Worst)" Title="最差值" Sortable="true" />
                                <PropertyColumn Property="@(a => a.Threshold)" Title="阈值" Sortable="true" />
                                <TemplateColumn Title="原始值" Sortable="true">
                                    <span class="@(context.Failed ? "smart-attribute-failed" : "")">
                                        @context.RawValue
                                        @if (context.Failed)
                                        {
                                            <text> ⚠️</text>
                                        }
                                    </span>
                                </TemplateColumn>
                            </FluentDataGrid>
                        </div>
                        @if (smartInfo.Attributes.Any(a => a.Failed))
                        {
                            <FluentMessageBar Intent="MessageIntent.Warning">
                                警告：部分 SMART 属性已低于阈值，磁盘可能存在问题。建议尽快备份数据。
                            </FluentMessageBar>
                        }
                    </FluentStack>
                }

                <!-- Raw Output -->
                <FluentAccordion>
                    <FluentAccordionItem Heading="原始输出">
                        <pre class="smart-raw-output">@smartInfo.RawOutput</pre>
                    </FluentAccordionItem>
                </FluentAccordion>
            </FluentStack>
        }
    </FluentDialogBody>

    <FluentDialogFooter>
        <FluentButton Appearance="Appearance.Neutral" OnClick="@CloseSmartDialog">
            关闭
        </FluentButton>
    </FluentDialogFooter>
</FluentDialog>

<!-- Power Management Dialog -->
<FluentDialog @ref="powerDialog" @bind-Hidden="@isPowerDialogHidden" TrapFocus="true" Modal="true">
    <FluentDialogHeader ShowDismiss="true">
        <FluentStack VerticalAlignment="VerticalAlignment.Center">
            <FluentIcon Value="@(new Icons.Regular.Size24.Battery10())" />
            <FluentLabel Typo="Typography.PaneHeader">
                电源管理 - @selectedDisk?.Name
            </FluentLabel>
        </FluentStack>
    </FluentDialogHeader>

    <FluentDialogBody>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="15">
            <FluentLabel Typo="Typography.Body">为此磁盘配置电源管理设置：</FluentLabel>

            <FluentNumberField @bind-Value="spinDownTimeout"
                               Label="待机超时时间（分钟）"
                               Min="0"
                               Max="240"
                               Placeholder="0 = 禁用"
                               Class="form-field-full-width">
                <FluentLabel Slot="help-text">磁盘空闲后自动进入待机状态的时间（0 表示禁用）</FluentLabel>
            </FluentNumberField>

            <FluentNumberField @bind-Value="apmLevel"
                               Label="APM 电源管理级别"
                               Min="1"
                               Max="255"
                               Placeholder="128 = 均衡"
                               Class="form-field-full-width">
                <FluentLabel Slot="help-text">
                    高级电源管理级别：1-127 = 节能优先（更激进的节能），128 = 均衡，129-254 = 性能优先，255 = 禁用 APM
                </FluentLabel>
            </FluentNumberField>

            <FluentMessageBar Intent="MessageIntent.Info">
                注意：某些硬盘可能不支持这些电源管理设置。APM 级别越低越节能，但可能影响性能和硬盘寿命。
            </FluentMessageBar>
        </FluentStack>
    </FluentDialogBody>

    <FluentDialogFooter>
        <FluentButton Appearance="Appearance.Accent" OnClick="@ApplyPowerSettings">
            应用
        </FluentButton>
        <FluentButton Appearance="Appearance.Neutral" OnClick="@ClosePowerDialog">
            取消
        </FluentButton>
    </FluentDialogFooter>
</FluentDialog>

@code {
    private List<DiskInfo> localDisks = new();
    private List<NetworkDiskInfo> networkDisks = new();

    private FluentDialog? wizardDialog;
    private FluentDialog? powerDialog;
    private FluentDialog? smartDialog;
    private bool isLoading = true;
    private bool isAuthorized = false;
    private bool isWizardHidden = true;
    private bool isPowerDialogHidden = true;
    private bool isSmartDialogHidden = true;

    private int wizardStep = 1;
    private NetworkDiskConfiguration networkDiskConfig = new();

    private DiskInfo? selectedDisk;
    private int spinDownTimeout = 0;
    private int apmLevel = 128; // Default APM level (128 = balanced)
    private SmartInfo? smartInfo;

    /// <summary>
    /// Initialize the page
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        // Authentication is handled by AuthenticationGuard
        // Only check if user is admin
        if (!AuthStateService.IsAdmin)
        {
            isAuthorized = false;
            Logger.LogWarning("Non-admin user {Username} attempted to access disk management",
                AuthStateService.CurrentUser?.Username);
            return;
        }

        isAuthorized = true;
        await LoadDisks();
    }

    /// <summary>
    /// Load all disks (local and network)
    /// </summary>
    private async Task LoadDisks()
    {
        isLoading = true;
        try
        {
            var allDisksTask = DiskService.GetAllDisksAsync();
            var networkDisksTask = DiskService.GetNetworkDisksAsync();

            await Task.WhenAll(allDisksTask, networkDisksTask);

            localDisks = allDisksTask.Result;
            networkDisks = networkDisksTask.Result;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading disks");
            ToastService.ShowError("Failed to load disks");
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// Refresh disk list
    /// </summary>
    private async Task RefreshDisks()
    {
        await LoadDisks();
        ToastService.ShowInfo("Disks refreshed");
    }

    /// <summary>
    /// Toggle mount status of a local disk
    /// </summary>
    private async Task ToggleDiskMount(DiskInfo disk)
    {
        try
        {
            DiskOperationResult result;

            if (disk.IsReady)
            {
                // Unmount
                result = await DiskService.UnmountDiskAsync(disk.MountPoint);
            }
            else
            {
                // Mount - need to prompt for mount point
                // For simplicity, using auto-generated mount point with sanitization
                var deviceName = disk.Name.Replace("/dev/", "");
                // Sanitize the device name to create a valid mount point
                var invalidChars = Path.GetInvalidFileNameChars().Concat(new[] { ' ', '.' }).ToArray();
                foreach (var c in invalidChars)
                {
                    deviceName = deviceName.Replace(c, '_');
                }
                var mountPoint = $"/mnt/{deviceName}";
                result = await DiskService.MountDiskAsync(disk.DevicePath, mountPoint);
            }

            if (result.Success)
            {
                ToastService.ShowSuccess(result.Message);
                await LoadDisks();
            }
            else
            {
                ToastService.ShowError(result.Message);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling disk mount for {DiskName}", disk.Name);
            ToastService.ShowError("Failed to toggle disk mount");
        }
    }

    /// <summary>
    /// Toggle mount status of a network disk
    /// </summary>
    private async Task ToggleNetworkDiskMount(NetworkDiskInfo disk)
    {
        try
        {
            var result = disk.IsReady
                ? await DiskService.UnmountDiskAsync(disk.MountPoint)
                : await DiskService.MountNetworkDiskAsync(
                    disk.Server,
                    disk.SharePath,
                    disk.MountPoint,
                    disk.DiskType
                );

            if (result.Success)
            {
                ToastService.ShowSuccess(result.Message);
                await LoadDisks();
            }
            else
            {
                HandleDiskOperationResult(result, "Network disk toggle operation");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling network disk mount");
            ToastService.ShowError($"Failed to toggle network disk mount: {ex.Message}");
        }
    }

    /// <summary>
    /// Delete a network disk configuration
    /// </summary>
    private async Task DeleteNetworkDisk(NetworkDiskInfo disk)
    {
        try
        {
            // First unmount if mounted
            if (disk.IsReady)
            {
                var unmountResult = await DiskService.UnmountDiskAsync(disk.MountPoint);
                if (!unmountResult.Success)
                {
                    ToastService.ShowWarning($"Could not unmount: {unmountResult.Message}");
                    return;
                }
            }

            // Remove from fstab (regardless of mount status)
            var removeResult = await DiskService.RemoveNetworkDiskFromFstabAsync(disk.MountPoint, disk.FileSystem);
            if (removeResult.Success)
            {
                ToastService.ShowSuccess(removeResult.Message);
            }
            else
            {
                ToastService.ShowWarning($"未能从配置中移除: {removeResult.Message}");
            }
            await LoadDisks();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting network disk");
            ToastService.ShowError("Failed to delete network disk");
        }
    }

    #region Network Disk Wizard

    /// <summary>
    /// Open the network disk wizard
    /// </summary>
    private void OpenNetworkDiskWizard()
    {
        wizardStep = 1;
        networkDiskConfig = new NetworkDiskConfiguration
        {
            DiskType = NetworkDiskType.CIFS
        };
        isWizardHidden = false;
    }

    /// <summary>
    /// Move to next wizard step
    /// </summary>
    private void NextWizardStep()
    {
        if (wizardStep < 4)
        {
            wizardStep++;
        }
    }

    /// <summary>
    /// Move to previous wizard step
    /// </summary>
    private void PreviousWizardStep()
    {
        if (wizardStep > 1)
        {
            wizardStep--;
        }
    }

    /// <summary>
    /// Check if current wizard step is valid
    /// </summary>
    private bool IsCurrentWizardStepValid()
    {
        return wizardStep switch
        {
            1 => true, // Type selection always valid
            2 => !string.IsNullOrWhiteSpace(networkDiskConfig.Server) &&
                 !string.IsNullOrWhiteSpace(networkDiskConfig.SharePath),
            3 => !string.IsNullOrWhiteSpace(networkDiskConfig.MountPoint),
            4 => true, // Confirmation always valid
            _ => false
        };
    }

    /// <summary>
    /// Mount the network disk
    /// </summary>
    private async Task MountNetworkDisk()
    {
        try
        {
            var options = networkDiskConfig.ReadOnly ? "ro" : null;

            var result = networkDiskConfig.AutoMount
                ? await DiskService.MountNetworkDiskPermanentAsync(
                    networkDiskConfig.Server,
                    networkDiskConfig.SharePath,
                    networkDiskConfig.MountPoint,
                    networkDiskConfig.DiskType,
                    networkDiskConfig.Username,
                    networkDiskConfig.Password,
                    networkDiskConfig.Domain,
                    options
                )
                : await DiskService.MountNetworkDiskAsync(
                    networkDiskConfig.Server,
                    networkDiskConfig.SharePath,
                    networkDiskConfig.MountPoint,
                    networkDiskConfig.DiskType,
                    networkDiskConfig.Username,
                    networkDiskConfig.Password,
                    networkDiskConfig.Domain,
                    options
                );

            if (result.Success)
            {
                ToastService.ShowSuccess(result.Message);
                await LoadDisks();
                CloseWizard();
            }
            else
            {
                HandleDiskOperationResult(result, "Network disk mount");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error mounting network disk");
            ToastService.ShowError($"Failed to mount network disk: {ex.Message}");
        }
    }

    /// <summary>
    /// Close the wizard
    /// </summary>
    private void CloseWizard()
    {
        isWizardHidden = true;
        wizardStep = 1;
    }

    #endregion

    #region SMART Information

    /// <summary>
    /// Open SMART information dialog
    /// </summary>
    private async Task OpenSmartInfoDialog(DiskInfo disk)
    {
        selectedDisk = disk;
        smartInfo = null; // Reset to show loading state
        isSmartDialogHidden = false;

        try
        {
            smartInfo = await DiskService.GetDiskSmartInfoAsync(disk.DevicePath);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading SMART info for {DiskName}", disk.Name);
            smartInfo = new SmartInfo
            {
                Success = false,
                ErrorMessage = $"加载 SMART 信息失败: {ex.Message}"
            };
        }
    }

    /// <summary>
    /// Close SMART information dialog
    /// </summary>
    private void CloseSmartDialog()
    {
        isSmartDialogHidden = true;
        smartInfo = null;
    }

    #endregion

    #region Power Management

    /// <summary>
    /// Open power management dialog
    /// </summary>
    private async Task OpenPowerManagementDialog(DiskInfo disk)
    {
        selectedDisk = disk;

        try
        {
            var settings = await DiskService.GetDiskPowerSettingsAsync(disk.DevicePath);
            spinDownTimeout = settings.SpinDownTimeoutMinutes;
            apmLevel = settings.ApmLevel ?? 128; // Default to 128 if not set
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading power settings for {DiskName}", disk.Name);
            spinDownTimeout = 0;
            apmLevel = 128;
        }

        isPowerDialogHidden = false;
    }

    /// <summary>
    /// Apply power management settings
    /// </summary>
    private async Task ApplyPowerSettings()
    {
        if (selectedDisk == null) return;

        try
        {
            // Apply spin-down timeout
            var spinDownResult = await DiskService.SetDiskSpinDownAsync(selectedDisk.DevicePath, spinDownTimeout);

            // Apply APM level
            var apmResult = await DiskService.SetDiskApmLevelAsync(selectedDisk.DevicePath, apmLevel);

            if (spinDownResult.Success && apmResult.Success)
            {
                ToastService.ShowSuccess("电源管理设置已成功应用");
                ClosePowerDialog();
            }
            else if (!spinDownResult.Success && !apmResult.Success)
            {
                ToastService.ShowError($"设置失败: {spinDownResult.Message}; {apmResult.Message}");
            }
            else if (!spinDownResult.Success)
            {
                ToastService.ShowWarning($"APM 设置成功，但待机超时设置失败: {spinDownResult.Message}");
            }
            else
            {
                ToastService.ShowWarning($"待机超时设置成功，但 APM 设置失败: {apmResult.Message}");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error applying power settings");
            ToastService.ShowError("应用电源设置失败");
        }
    }

    /// <summary>
    /// Close power management dialog
    /// </summary>
    private void ClosePowerDialog()
    {
        isPowerDialogHidden = true;
        selectedDisk = null;
    }

    #endregion

    #region Helper Methods

    /// <summary>
    /// Handle disk operation result, logging errors and displaying appropriate toast messages
    /// </summary>
    private void HandleDiskOperationResult(DiskOperationResult result, string operationName)
    {
        if (!string.IsNullOrEmpty(result.ErrorDetails))
        {
            Logger.LogError("{OperationName} failed. Message: {Message}, ErrorDetails: {ErrorDetails}", 
                operationName, result.Message, result.ErrorDetails);
        }
        
        // Show error message with details if available
        var errorMessage = result.Message;
        if (!string.IsNullOrEmpty(result.ErrorDetails))
        {
            errorMessage += $": {result.ErrorDetails}";
        }
        ToastService.ShowError(errorMessage);
    }

    #endregion

    /// <summary>
    /// Network disk configuration class
    /// </summary>
    private class NetworkDiskConfiguration
    {
        public NetworkDiskType DiskType { get; set; } = NetworkDiskType.CIFS;
        public string Server { get; set; } = string.Empty;
        public string SharePath { get; set; } = string.Empty;
        public string MountPoint { get; set; } = string.Empty;
        public string? Username { get; set; }
        public string? Password { get; set; }
        public string? Domain { get; set; }
        public bool ReadOnly { get; set; } = false;
        public bool AutoMount { get; set; } = false;
    }
}
