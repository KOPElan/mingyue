    /// <summary>
    /// Confirm and delete user
    /// </summary>
    private async Task ConfirmDeleteUser()
    {
        if (userToDelete == null) return;

        try
        {
            // Check if the user is referenced in any shares
            var referencingShares = sambaShares
                .Where(s =>
                    (!string.IsNullOrEmpty(s.ValidUsers) && s.ValidUsers.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).Contains(userToDelete.Username, StringComparer.OrdinalIgnoreCase)) ||
                    (!string.IsNullOrEmpty(s.WriteList) && s.WriteList.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).Contains(userToDelete.Username, StringComparer.OrdinalIgnoreCase)))
                .Select(s => s.Name)
                .ToList();

            if (referencingShares.Count > 0)
            {
                ToastService.ShowWarning($"User '{userToDelete.Username}' is referenced in {referencingShares.Count} share(s): {string.Join(", ", referencingShares)}. The user will be removed from their access lists.");
            }

            var result = await ShareService.RemoveSambaUserAsync(userToDelete.Username);

            if (result.Success)
            {
                ToastService.ShowSuccess($"SMB user '{userToDelete.Username}' deleted successfully");
                await LoadUsers();

                // Reload shares if user was referenced in any
                if (referencingShares.Count > 0)
                {
                    await LoadShares();
                }
            }
            else
            {
                ToastService.ShowError(result.Message);
            }

            CloseDeleteUserDialog();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting user");
            ToastService.ShowError("Failed to delete user");
        }
    }

