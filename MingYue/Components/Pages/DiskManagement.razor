            <div class="section-header">
                <FluentIcon Value="@(new Icons.Regular.Size20.Cloud())" Color="@Color.Accent" />
                <h2 class="section-title">Network Disks</h2>
                <FluentBadge Appearance="Appearance.Neutral">@networkDisks.Count disk@(networkDisks.Count != 1 ? "s" : "")</FluentBadge>
            </div>
            
            @if (networkDisks.Count == 0)
