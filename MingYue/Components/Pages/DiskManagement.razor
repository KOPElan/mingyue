                                            Title="Remove">
                                    <FluentIcon Value="@(new Icons.Regular.Size20.Delete())" Color="@Color.Error" />
                                </FluentButton>
                            </div>
                        </div>
                        
                        @if (disk.IsReady)
                        {
                            <div class="disk-stats">
                                <div class="stat-item">
                                    <span class="stat-label">Server</span>
                                    <span class="stat-value">@disk.Server</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-label">Share Path</span>
                                    <span class="stat-value">@disk.SharePath</span>
                                </div>
                                <div class="stat-item">
